<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center animate__animated animate__flipInY animate__fast">
                <div class="card-header">
                    <h3>New Link</h3>
                </div>
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        </br>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="URL">
                        </div>
                        </br>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description"></textarea>
                        </div>
                        </br>
                        <div class="form-group">
                            <button class="btn btn-success" style="width: 100%;">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>