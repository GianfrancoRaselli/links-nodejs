<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card animate__animated animate__flipInY animate__fast">
                <div class="card-body">
                    <form action="/links/edit/{{link.id_link}}" method="POST">
                        <div class="form-group">
                            <label style="font-size: x-large; font-weight: bold; text-align: center; width: 100%;">New
                                Link</label>
                        </div>
                        </br>
                        <div class="form-group">
                            <input value="{{link.title}}" type="text" class="form-control" name="title"
                                placeholder="Title" autofocus>
                        </div>
                        </br>
                        <div class="form-group">
                            <input value="{{link.url}}" type="url" class="form-control" name="url" placeholder="URL">
                        </div>
                        </br>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description">{{link.description}}</textarea>
                        </div>
                        </br>
                        <div class="form-group">
                            <button class="btn btn-success" style="width: 100%;">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>